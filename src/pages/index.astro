<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Free',
        id: 'openModalBtn',
        icon: 'tabler:download',
      },
      { text: 'Demo', href: './demo' },
