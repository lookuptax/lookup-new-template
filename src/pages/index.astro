import TaxIdValidationWidget from '~/components/widgets/TaxIdValidationWidget.astro';
import Modal from '~/components/ui/Modal.astro';
import HubspotForm from '~/components/widgets/HubspotForm.astro';

const metadata = {
  title: 'Lookuptax Free tax ID validation across the world',
  ignoreTitleTemplate: true,
};
