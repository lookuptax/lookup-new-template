---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import TaxIdValidation from '~/components/widgets/TaxIdValidation.astro';
import Modal from '~/components/ui/Modal.astro';
import HubspotForm from '~/components/widgets/HubspotForm.astro';

const metadata = {
  title: 'Global Tax ID Validation API | Validate VAT, GSTIN, EIN and more | Lookuptax',
  ignoreTitleTemplate: true,
};

const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Organization',
      name: 'Lookuptax',
      url: 'https://lookuptax.com',
      sameAs: ['https://x.com/lookuptax', 'https://www.linkedin.com/company/lookuptax/'],
    },
    {
      '@type': 'WebApplication',
      name: 'Lookuptax API',
      applicationCategory: 'FinanceApplication',
      operatingSystem: 'Cloud, Web',
      offers: {
        '@type': 'Offer',
        price: '0',
        priceCurrency: 'USD',
      },
    },
    {
      '@type': 'FAQPage',
      mainEntity: [
        {
          '@type': 'Question',
          name: 'What countries do you support for Tax ID validation?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'We support over 100 countries including the European Union (VIES), UK (HMRC), India (GST), and Australia (ABR). We connect directly to official government databases.',
          },
        },
        {
          '@type': 'Question',
          name: 'How do I get started with Lookuptax?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Simply sign up for a free account to get API keys and access to our documentation. You can start validating IDs immediately.',
          },
        },
        {
          '@type': 'Question',
          name: 'What is the pricing model for Lookuptax?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'We have a free starter plan and scalable paid tiers based on validation volume. You only pay for what you use.',
          },
        },
        {
          '@type': 'Question',
          name: 'Is there a free trial available?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Yes, we offer a free trial with limited validations so you can test our accuracy and speed before committing.',
          },
        },
        {
          '@type': 'Question',
          name: 'What do I do if the country I am looking for is not listed on your website?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'If your business operates globally and you don’t find the country you’re looking for, please contact us at support@lookuptax.com, we’re happy to prioritize it for you.',
          },
        },
        {
          '@type': 'Question',
          name: 'What do I do if I am facing trouble integrating or having any other questions?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'You can reach out to support@lookuptax.com for all questions. Our team will reach out to you with a response as soon as possible.',
          },
        },
      ],
    },
  ],
};
---

<Layout metadata={metadata}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Free',
        /*  id: 'openModalBtn',
        icon: 'tabler:lock-open',
        */
        href: 'https://platform.lookuptax.com/auth?page=register',
      },

      { text: 'Demo', href: './demo' },
    ]}
    image={{
      src: '~/assets/images/official-sources.png',
      alt: 'Supported Official sources',
      style: 'width: auto; height: auto; max-width: 100%; max-height: 100%; aspect-ratio: auto; ',
      class: 'hidden xl:inline',
    }}
  >
    <Fragment slot="title">
      Global Tax ID Validation via <span class="text-accent hidden xl:inline">Official Government Sources</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Connect directly to national databases for <span class="font-semibold">100% accurate real-time validation.</span
        ></span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Official Source Validation</span>
      No cached data. Support for VAT, GST, ABN, EIN and more
    </Fragment>
  </Hero>

