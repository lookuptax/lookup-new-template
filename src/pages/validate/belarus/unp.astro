---
import Layout from '~/layouts/PageLayout.astro';
import CountryTaxIdValidation from '~/components/widgets/CountryTaxIdValidation.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Validate Belarus UNP (Tax ID) | Free Ministry Check',
  description:
    'Free Belarus UNP validator (Free Quota). Verify 9-digit Tax ID, distinguish from OKPO, and check status against Ministry of Taxes and Duties.',
};
---

<Layout metadata={metadata}>
  <CountryTaxIdValidation
    title="Validate Belarus UNP (Tax ID) Online"
    subtitle="Verify Belarus UNP status, distinguish from OKPO code, and check entity details with a free quota. Validate 9-digit format against Ministry of Taxes and Duties rules."
    tagline="Belarus UNP Validation"
    country="BY"
    taxIdPlaceholder="Enter UNP (e.g., 100057283)"
    sampleTaxIds={`[{"tin":"100057283"}]`}
  />

  <WidgetWrapper containerClass="max-w-7xl mx-auto" id="format">
    <Headline
      title="Understanding Belarus UNP Format"
      subtitle="The Payer's Account Number (UNP) is a unique 9-digit code assigned by the Ministry of Taxes and Duties."
    />

    <div class="flex flex-col md:flex-row gap-8 mt-8">
      <div
        class="flex-1 bg-blue-50 dark:bg-slate-800 p-6 rounded-lg text-center flex flex-col justify-center items-center"
      >
        <div class="flex gap-6 items-start">
          <div class="flex flex-col items-center">
            <span class="text-3xl font-mono font-bold text-primary tracking-wider">1</span>
            <span class="text-xs text-gray-500 mt-2">Region<br />(e.g., Minsk)</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-3xl font-mono font-bold text-primary tracking-wider">0005728</span>
            <span class="text-xs text-gray-500 mt-2">7 Serial<br />Digits</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-3xl font-mono font-bold text-primary tracking-wider">3</span>
            <span class="text-xs text-gray-500 mt-2">Check<br />Digit</span>
          </div>
        </div>
      </div>
      <div class="flex-1 flex flex-col justify-center">
        <ul class="space-y-3 text-gray-600 dark:text-gray-400">
          <li class="flex items-start">
            <span class="mr-2 text-primary font-bold">✓</span>
            <span
              ><strong>Region Codes:</strong> 1=Minsk City, 2=Brest, 3=Vitebsk, 4=Gomel, 5=Grodno, 6=Minsk Region, 7=Mogilev.</span
            >
          </li>
          <li class="flex items-start">
            <span class="mr-2 text-primary font-bold">✓</span>
            <span
              ><strong>Foreign Entities:</strong> Code <strong>8</strong> indicates a foreign organization (Digital Services
              VAT).</span
            >
          </li>
          <li class="flex items-start">
            <span class="mr-2 text-primary font-bold">✓</span>
            <span
              ><strong>UNP vs OKPO:</strong> UNP (Tax) is mandatory for invoicing. OKPO (Statistics) is not used for tax validation.</span
            >
          </li>
        </ul>
      </div>
    </div>
  </WidgetWrapper>

  <WidgetWrapper containerClass="max-w-7xl mx-auto" id="faq">
    <Headline title="Frequently Asked Questions" />
    <div class="mt-8 grid gap-6 md:grid-cols-2">
      <div class="bg-gray-50 dark:bg-slate-800 p-6 rounded-lg">
        <h3 class="text-lg font-bold mb-2">Difference between UNP and OKPO?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          The <strong>UNP</strong> (9 digits) is the only valid number for VAT/Tax purposes. The <strong>OKPO</strong> is
          a statistical code assigned by Belstat and cannot be used for invoicing.
        </p>
      </div>
      <div class="bg-gray-50 dark:bg-slate-800 p-6 rounded-lg">
        <h3 class="text-lg font-bold mb-2">Does Belarus apply VAT to digital services?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          Yes. Foreign companies providing digital services ("Google Tax") must register for VAT if the customer is
          Belarusian. These entities are assigned a UNP starting with <strong>8</strong>.
        </p>
      </div>

      <div class="bg-gray-50 dark:bg-slate-800 p-6 rounded-lg">
        <h3 class="text-lg font-bold mb-2">Where do I verify a UNP?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          You can use our tool or the official <strong>Ministry of Taxes and Duties</strong> portal (nalog.gov.by). Always
          check that the name matches the UNP.
        </p>
      </div>
    </div>
  </WidgetWrapper>

  <CallToAction
    title="Need to validate 100+ tax IDs?"
    subtitle="Get accurate, real-time validation for Belarus (UNP) and 100+ other countries with one API."
    actions={[
      {
        variant: 'primary',
        text: 'Sign Up for Free',
        href: 'https://platform.lookuptax.com/auth?page=register',
      },
      {
        text: 'Official Tax Guide',
        href: 'https://lookuptax.com/docs/tax-identification-number/belarus',
        icon: 'tabler:book',
      },
    ]}
  />

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Difference between UNP and OKPO?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "The UNP (9 digits) is the only valid number for VAT/Tax purposes. The OKPO is a statistical code assigned by Belstat and cannot be used for invoicing."
          }
        },
        {
          "@type": "Question",
          "name": "Does Belarus apply VAT to digital services?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. Foreign companies providing digital services ('Google Tax') must register for VAT if the customer is Belarusian. These entities are assigned a UNP starting with 8."
          }
        },

        {
          "@type": "Question",
          "name": "Where do I verify a UNP?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can use our tool or the official Ministry of Taxes and Duties portal (nalog.gov.by). Always check that the name matches the UNP."
          }
        }
      ]
    }
  </script>
</Layout>
