---
import Layout from '~/layouts/PageLayout.astro';
import CountryTaxIdValidation from '~/components/widgets/CountryTaxIdValidation.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Validate Bahamas TIN Online | Free Bahamas Tax ID Checker',
  description:
    'Instantly validate Bahamas Taxpayer Identification Number (TIN) online. Free Bahamas TIN checker with official entity details. Integrate TIN validation API into your workflows.',
};
---

<Layout metadata={metadata}>
  <CountryTaxIdValidation
    title="Validate Bahamas Taxpayer Identification Number (TIN) Online"
    subtitle="Quickly and accurately validate Tax Identification Numbers for businesses registered in The Bahamas."
    tagline="Bahamas TIN Validation"
    country="BS"
    taxIdPlaceholder="Enter TIN (e.g., 123456789)"
    sampleTaxIds={`[{"tin":"123456789"}]`}
  />
  <WidgetWrapper containerClass="max-w-7xl mx-auto">
    <Headline title="Frequently Asked Questions" />
    <div class="mt-8">
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">What is a Bahamas TIN?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          The Bahamas TIN is a unique Taxpayer Identification Number issued to businesses and entities for tax
          compliance purposes in The Bahamas.
        </p>
      </div>
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">How can I validate a Bahamas TIN online?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          Use Lookuptax's free TIN checker to validate any Bahamas Taxpayer Identification Number. Enter the TIN to
          confirm validity instantly.
        </p>
      </div>
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">Can I integrate Bahamas TIN validation into my system?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          Yes. Lookuptax provides a TIN validation API for automated compliance workflows.
        </p>
      </div>
    </div>
  </WidgetWrapper>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is a Bahamas TIN?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "A Taxpayer Identification Number issued to entities in The Bahamas."
          }
        }
      ]
    }
  </script>

  <CallToAction
    title="Ready to automate Tax ID validation?"
    subtitle="Signup with a free trial to validate tax IDs in 100+ countries"
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: 'https://platform.lookuptax.com/auth?page=register',
      },
    ]}
  />
</Layout>
