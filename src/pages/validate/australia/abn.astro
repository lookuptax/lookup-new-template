---
import Layout from '~/layouts/Layout.astro';
import CountryTaxIdValidation from '~/components/widgets/CountryTaxIdValidation.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Validate Australia ABN (Tax ID) | Free 11-Digit Format Check',
  description:
    'Free Australia ABN validator. Check 11-digit format (XX XXX XXX XXX), verify active status on Australian Business Register (ABR), and integrate API.',
};
---

<Layout metadata={metadata}>
  <CountryTaxIdValidation
    title="Validate Australian Business Number (ABN) Online"
    subtitle="Verify ABN status, entity type, and GST registration for free. Check 11-digit format and validate against the Australian Business Register (ABR)."
    tagline="Australia ABN Validation"
    country="AU"
    taxIdPlaceholder="Enter ABN (e.g., 51824753556)"
    sampleTaxIds={`[{"tin":"51824753556"}]`}
  />

  <WidgetWrapper containerClass="max-w-7xl mx-auto" id="format">
    <Headline
      title="Understanding Australia ABN Format"
      subtitle="The Australian Business Number (ABN) is a unique 11-digit identifier. It is distinct from the 9-digit ACN (Company Number)."
    />

    <div class="flex flex-col md:flex-row gap-8 mt-8">
      <div
        class="flex-1 bg-blue-50 dark:bg-slate-800 p-6 rounded-lg text-center flex flex-col justify-center items-center"
      >
        <div class="flex gap-6 items-start">
          <div class="flex flex-col items-center">
            <span class="text-3xl font-mono font-bold text-primary tracking-wider">51</span>
            <span class="text-xs text-gray-500 mt-2">2 Check<br />Digits</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-3xl font-mono font-bold text-primary tracking-wider">824 753 556</span>
            <span class="text-xs text-gray-500 mt-2">9-Digit<br />Identifier (ACN)</span>
          </div>
        </div>
      </div>
      <div class="flex-1 flex flex-col justify-center">
        <ul class="space-y-3 text-gray-600 dark:text-gray-400">
          <li class="flex items-start">
            <span class="mr-2 text-primary font-bold">✓</span>
            <span
              ><strong>Structure:</strong> 11 digits total. The first two are check digits calculated using a Modulus 89 algorithm.</span
            >
          </li>
          <li class="flex items-start">
            <span class="mr-2 text-primary font-bold">✓</span>
            <span
              ><strong>ABN vs ACN:</strong> For companies, the last 9 digits are usually their Australian Company Number (ACN).</span
            >
          </li>
          <li class="flex items-start">
            <span class="mr-2 text-primary font-bold">✓</span>
            <span><strong>No Letters:</strong> An ABN is strictly numeric. It never contains letters.</span>
          </li>
        </ul>
      </div>
    </div>
  </WidgetWrapper>

  <WidgetWrapper containerClass="max-w-7xl mx-auto" id="faq">
    <Headline title="Frequently Asked Questions" />
    <div class="mt-8 grid gap-6 md:grid-cols-2">
      <div class="bg-gray-50 dark:bg-slate-800 p-6 rounded-lg">
        <h3 class="text-lg font-bold mb-2">What is the difference between ABN and ACN?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          An <strong>ABN</strong> (11 digits) is for all businesses dealing with tax/government. An <strong>ACN</strong> (9
          digits) is only for registered companies. If you have an ACN, your ABN is usually just "Check Digits + ACN".
        </p>
      </div>
      <div class="bg-gray-50 dark:bg-slate-800 p-6 rounded-lg">
        <h3 class="text-lg font-bold mb-2">Where can I check an ABN status?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          You can check it on the government's <strong>ABN Lookup</strong> website or use our API. Our tool checks if the
          ABN is "Active" or "Cancelled" and whether it is registered for GST.
        </p>
      </div>
      <div class="bg-gray-50 dark:bg-slate-800 p-6 rounded-lg">
        <h3 class="text-lg font-bold mb-2">How do I find a company's ABN?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          By law, businesses must display their ABN on invoices, receipts, and their website footer. If a supplier
          refuses to provide an ABN, you may need to withhold 47% of the payment.
        </p>
      </div>
    </div>
  </WidgetWrapper>

  <CallToAction
    title="Need to validate 100+ tax IDs?"
    subtitle="Get accurate, real-time validation for Australia (ABN) and 100+ other countries with one API."
    actions={[
      {
        variant: 'primary',
        text: 'Sign Up for Free',
        href: 'https://platform.lookuptax.com/auth?page=register',
      },
      {
        text: 'Read Australia Tax Guide',
        href: 'https://lookuptax.com/docs/tax-identification-number/australia-tax-id-guide',
        icon: 'tabler:book',
      },
    ]}
  />

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is the difference between ABN and ACN?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "An ABN (11 digits) is for all businesses dealing with tax/government. An ACN (9 digits) is only for registered companies. If you have an ACN, your ABN is usually just 'Check Digits + ACN'."
          }
        },
        {
          "@type": "Question",
          "name": "Where can I check an ABN status?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can check it on the government's ABN Lookup website or use our API. Our tool checks if the ABN is 'Active' or 'Cancelled' and whether it is registered for GST."
          }
        },
        {
          "@type": "Question",
          "name": "How do I find a company's ABN?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "By law, businesses must display their ABN on invoices, receipts, and their website footer. If a supplier refuses to provide an ABN, you may need to withhold 47% of the payment."
          }
        }
      ]
    }
  </script>
</Layout>
