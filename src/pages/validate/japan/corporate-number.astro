---
import Layout from '~/layouts/PageLayout.astro';
import CountryTaxIdValidation from '~/components/widgets/CountryTaxIdValidation.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Validate Japan Corporate Number Online | Free Houjin Bangou Checker',
  description:
    'Instantly validate Japan Corporate Number (法人番号 Houjin Bangou) online. Free Japanese Corporate Number checker with official company details. Integrate validation API into your workflows.',
};
---

<Layout metadata={metadata}>
  <CountryTaxIdValidation
    title="Validate Japan Corporate Number (法人番号) Online"
    subtitle="Quickly and accurately validate Japan Corporate Numbers (Houjin Bangou) for Japanese businesses and organizations."
    tagline="Japan Corporate Number Validation"
    country="JP"
    taxIdPlaceholder="Enter Corporate Number (e.g., 1234567890123)"
    sampleTaxIds={`[{"tin":"1234567890123"}]`}
  />
  <WidgetWrapper containerClass="max-w-7xl mx-auto">
    <Headline title="Frequently Asked Questions" />
    <div class="mt-8">
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">What is a Japan Corporate Number (法人番号)?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          The Corporate Number (Houjin Bangou) is a 13-digit unique identifier assigned to all corporations in Japan by
          the National Tax Agency. It's used for tax filings and official business transactions.
        </p>
      </div>
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">How can I validate a Japanese Corporate Number online?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          Use Lookuptax's free Corporate Number checker to validate any Japan Corporate Number. Enter the number to
          confirm validity and retrieve official company details.
        </p>
      </div>
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">Can I integrate Corporate Number validation into my system?</h3>
        <p class="text-gray-700 dark:text-gray-300">
          Yes. Lookuptax provides a Corporate Number validation API with access to the NTA database for automated
          verification.
        </p>
      </div>
    </div>
  </WidgetWrapper>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is a Japan Corporate Number?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "A 13-digit identifier issued by Japan's National Tax Agency to all corporations."
          }
        },
        {
          "@type": "Question",
          "name": "Is Corporate Number verification free?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Format and checksum validation is free; NTA database lookups may be rate-limited."
          }
        }
      ]
    }
  </script>

  <CallToAction
    title="Ready to automate Tax ID validation?"
    subtitle="Signup with a free trial to validate tax IDs in 100+ countries"
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: 'https://platform.lookuptax.com/auth?page=register',
      },
    ]}
  />
</Layout>
